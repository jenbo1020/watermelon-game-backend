{
    "name": "watermelon-game-backend",
    "version": "0.0.1",
    "main": "index.js",
    "private": true,
    "scripts": {
        "start":"node index.js",
        "dev": "tsrpc dev",
        "dev:sit": "cross-env NODE_ENV=sit tsrpc dev",
        "dev:release": "cross-env NODE_ENV=release tsrpc dev",
        "room:dev": "cross-env NODE_ENV=development tsrpc-cli dev --entry src/room.ts",
        "room:sit": "cross-env NODE_ENV=sit ROOM_SERVER_URL=wss://xa-test-api.aigamify.cn/ai-server-room-template ROOM_SERVER_NO=sit001 tsrpc-cli dev --entry src/room.ts",
        "test": "mocha test/**/*.test.ts",
        "build": "tsrpc build",
        "prettier": "prettier --write .",
        "doc": "tsrpc doc",
        "proto": "tsrpc proto",
        "sync": "tsrpc link",
        "sync:cross": "ts-node ./test/sync.ts && eslint . --fix",
        "api": "tsrpc api",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix"
    },
    "devDependencies": {
        "@babel/parser": "^7.17.3",
        "@babel/types": "^7.17.0",
        "@types/mocha": "^8.2.3",
        "@types/node": "^17.0.8",
        "eslint": "^7.32.0",
        "eslint-plugin-prettier": "4.2.1",
        "mocha": "^9.1.3",
        "ts-node": "^10.4.0",
        "tsrpc-cli": "^2.3.0",
        "typescript": "^4.5.2"
    },
    "dependencies": {
        "bson": "^4.6.1",
        "cross-env": "^7.0.3",
        "json-bigint": "^1.0.0",
        "mime": "^3.0.0",
        "moment": "^2.29.4",
        "mongodb": "^4.2.1",
        "nanoid": "^3.3.3",
        "request": "^2.88.2",
        "tsrpc": "^3.4.1",
        "tsrpc-browser": "^3.1.5"
    }
}
